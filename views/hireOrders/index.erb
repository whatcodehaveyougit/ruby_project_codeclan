<div class="banner">
  <h1>Hire Orders</h1>
  <nav>
    <ul class = "secondary-nav">
      <li><a href="/hire-orders/new">New Order</a></li>
      <li><a href="/hire-orders/all-orders">All Customer's Orders</a></li>
    </ul>
  </nav>
</div>


<div class="hire-orders">
  <h3 class="order-col">Name</h3>
  <h3 class="order-col">Item</h3>
  <h3 class="order-col">Day Price</h3>
  <h3 class="order-col">Full Price</h3>
  <h3 class="order-col">Discounted Price</h3>
  <h3 class="order-col">Start Date</h3>
  <h3 class="order-col">End Date</h3>
  <h3 class="order-col">Notes</h3>
  <% @hire_orders.each do |hire_order| %>

  <div class="order-col">
    <p class="capitalize name"><%= hire_order.customer.name %></p>
    <a href="/hire-orders/<%= hire_order.id %>/edit">
      <button type="button" name="button">Edit</button>
    </a>
    <form method="POST" action="/hire-orders/<%= hire_order.id %>/delete">
      <input type="submit" value="delete">
    </form>

  </div>

  <p class="capitalize name order-col"><%= hire_order.hire_item.name %></p>
  <p class="capitalize name order-col">£ <%= hire_order.hire_item.price %></p>
  <p class="capitalize name order-col">£ <%= hire_order.full_price %></p>
  <p class="capitalize name order-col">£ <%= hire_order.discounted_price.to_i %></p>
  <p class="capitalize name order-col"><%= hire_order.start_date %></p>
  <p class="capitalize name order-col"><%= hire_order.end_date %></p>
  <p class="capitalize name order-col"><%= hire_order.notes %></p>

  <% end %>


</div>
