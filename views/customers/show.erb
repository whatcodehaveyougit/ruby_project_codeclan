
<div class="customer-page">

  <p class="capitalize name"><%= @customer.name %></p>
  <p class="capitalize"><%= @customer.address %></p>
  <p><%= @customer.phone %></p>

  <a href="/customers/<%= @customer.id %>/edit">
    <button type="button">Edit</button>
  </a>

  <form method="POST" action="/customers/<%= @customer.id %>/delete">
    <input type="submit" value="Delete Customer"/>
  </form>

  <hr>
  <h2>Hired Items</h2>
  <% @customer.hired.each do |item| %>
  <hr>
    <p><%= item.name.capitalize %></p>
    <p><%= item.price %></p>
    <hr>
  <% end %>

</div>
